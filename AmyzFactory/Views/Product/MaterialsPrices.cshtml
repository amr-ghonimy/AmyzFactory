
@{
    ViewBag.Title = "MaterialsPrices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model  IEnumerable<AmyzFactory.Models.ProductViewModel>

<section class="price-table">
    <div class="container text-center text-md-left" id="Pagetitle">
        @if (Model != null && Model.Count() > 0)
        {
            <h2 class="cartheader">أسعار الخامات</h2>
            <table data-toggle="table" style="margin-top:10px;" class="table">
                <thead>
                    <tr>
                        <th>السعر</th>
                        <th>الصنف</th>
                    </tr>
                </thead>
                <tbody id="container">
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Price</td>
                                <td>@item.Name</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        }
        else
        {
            <div class="center" style="margin-top:90px;">
                <img src="~/Content/img/empty_box.jpg" alt="Paris" class="center">
                <h4 class="center" alt="Paris">لم يُحدد أسعار للخامات حالياً</h4>
            </div>
          
        }

</div>
</section>

@model IEnumerable<AmyzFactory.Models.CategoryViewModel>

 

@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="special-menu text-center">
                <div class="button-group filter-button-group">
                    @{
                        <button class="active" data-filter="*">الكل</button>

                        foreach (var item in Model)
                        {
                            if (item.Categories != null&&item.Categories.Count>0)
                            {
                                <button data-filter=".@item.Id">@item.Name</button>
                            }
                        }

                    }
                </div>
            </div>
        </div>
    </div>


    <div class="row special-list">

                       @foreach (var department in Model)
                       {

                           if (department.Categories != null && department.Categories.Count > 0)
                           {
                               foreach (var category in department.Categories)
                               {

                    <div class="col-lg-3 col-md-6 special-grid @category.DepartmentID" >
                        <div class="products-single fix">
                            <div class="box-img-hover">
                                <div class="type-lb">
                                    <p class="new">@category.Name</p>
                                </div>
                                <img src="@category.ImageUrl" width="250px" height="250px" class="img-fluid" alt="Image">
                                <div class="mask-icon">
                                    @Html.ActionLink("عرض المنتجات", "ShowProducts", "Product",new { categoryId=category.Id,categoryName=category.Name},new { @class="cart"})
                                </div>
                            </div>
                            
                        </div>
                    </div>

                               }
                           }





                       }

                        </div>


                        }





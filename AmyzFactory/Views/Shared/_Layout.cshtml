<script>

 

    function drawSlidCartContent(product) {
        var html=' <li>';
        html += '<a href="../Product/ProductDetails?id=' + product.Id + '" class="photo"><img src="' + product.ImageURL + '" class="cart-thumb" alt="" /></a>';
        html += '<h6><a href="../Product/ProductDetails?id='+product.Id+'">' + product.Name + ' </a></h6>';
        html += '<p>'+product.Quantity+'x - <span class="price">' + product.Price + '</span></p>';
        html += '</li>';                   
                       
        $('#cartSlidContainer').append(html);
    }

    function drawSlidCartTotal(total) {
        var html = '<li class="total">';
        html += '<a href="@Url.Action("Index", "Order")" class="btn btn-default hvr-hover btn-cart">التفاصيل</a>';
        html += '<span class="float-right"><strong>الاجمالى</strong>:' + '&nbsp' + total + " ج.م " + '</span>';
        html += '</li>';

        $('#cartSlidContainer').append(html);

                      
    }

    function drawEmptyCart() {
        var html = '<img src="../Content/img/empty_box.jpg" class="cart-thumb" alt="" />';

        $('#cartSlidContainer').append(html);
    }

    function showCartSlide() {
        $.ajax({
            url: "/HomePreview/GetProductsCartSession",
            type: "Get",
            dataType: "json",
            success: function (products) {
               

                $('#cartSlidContainer').empty();
                debugger;
                if (products != null) {

                    var total = 0.0;

                    $.each(products, function (index, value) {
                        total += (value.Price*value.Quantity);
                        drawSlidCartContent(value);
                    });

                    drawSlidCartTotal(total);
                } else {

                    drawEmptyCart();
                }

            }
        });

      
    }



    $(document).ready(function () {

        $('#searching').click(function () {
            debugger;
            var word = $('#searchText').val();

            if (word != "") {
                window.location.href = '../Product/SearchInProducts?word=' + word;
            }

        });

        


        $.ajax({
            url: "/AboutUS/ResponsibiltyTexts",
            type: "Get",
            dataType: "json",
            success: function (data) {
                $('#headerTitleRes').attr("value", data.Title);
                $('#p1Res').val(data.SubTitle);
                $('#p2Res').val(data.Description);
            }
        });
        

    })



 


</script>
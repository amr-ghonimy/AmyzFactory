
@model IEnumerable<AmyzFactory.Models.TextsViewModel>



@if (Model != null && Model.Count() > 0)
{


    for (int i = 0; i < Model.Count(); i++)
    {

        if (i == 3)
        {
            return;
        }

        AmyzFactory.Models.TextsViewModel item = Model.ToList()[i];

        string content = item.Description;
        if (content.Length > 80)
        {
            content = content.Substring(0, 80) +".......";
        }


        <div class="col-md-6 col-lg-4 col-xl-4">
            <div class="blog-box">
                <div class="blog-img">
                    <img class="img-fluid" src="@item.ImageUrl" alt="" />
                </div>
                <div class="blog-content">
                    <div class="title-blog">
                        <h3 class="footer-title">@item.Title</h3>
                        <p class="footer-text">@content</p>
                    </div>
                    <ul class="option-blog">
                        <li><a href="#"><i class="far fa-heart"></i></a></li>
                        <li><a href="@Url.Action("ArticleDetails","HomePreview",new { @id=item.Id})"><i class="fas fa-eye"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    }

    if (Model.Count() >3)
    {
        <div class="col-lg-6" style="text-align:right;">
           
            <a class="btn hvr-hover" href="#">المزيد</a>
        </div>
         
    }

}


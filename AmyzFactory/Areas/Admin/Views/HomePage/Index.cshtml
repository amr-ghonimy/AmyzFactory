        var delRepon = "@Url.Action("DeleteResponsiblityImage", "HomePage")";
        getImages(repon, "TblResponBody", delRepon);

  
     })



    // Ed from Images Functions


    $(document).ready(function () {
        getAddresses("@Url.Action("GetPhones", "HomePage")", "PhoneTblContainer","@Url.Action("DeletePhone", "HomePage")")
        getAddresses("@Url.Action("GetEmails", "HomePage")", "EmailTblContainer","@Url.Action("DeleteEmail", "HomePage")")
    })

    $(document).ready(function () {
        $.ajax({
            url: "@Url.Action("GetSiteInfo", "HomePage")",
            type: "Get",
            dataType: "json",
            success: function (data) {
                $('#headerTitle').val( data.Title);
                 $('#subTitle').val( data.SubTitle);
                $('#infoDesc').val(data.Description);
            }
        });

    })


    $(document).ready(function () {
        $.ajax({
            url: "@Url.Action("GetResponsibilityText", "HomePage")",
            type: "Get",
            dataType: "json",
            success: function (data) {
                $('#headerResTitle').val( data.Title);
                $('#subResTitle').val( data.SubTitle);
                $('#ResDesc').val(data.Description);
            }
        });

    })



    var drawAddress = function (address, DeleteUrl, TblContainer) {


        var trID = TblContainer + address.Id;
        var deletingUrl = DeleteUrl + "?id=" + address.Id;

        var html = '';
        html += '<tr id="' + trID + '">'
        html += '<td><h7 style="font-weight: bold; color:#4e73df;">' + address.Title + '</h7></td>'
        html += '<td style="vertical-align:middle; color:#1cc88a;">' + address.Value + '</td>'
        html += '<td><button class="btn btn-danger btn-block" type="button"  onClick= "deleteAddress(\'' + deletingUrl + '\',\'' + trID + '\')">Delete</button></td>'
        html += '</tr>'

        $('#' + TblContainer).append(html);
    }

    var getAddresses = function (URL, TblContainer, DeleteUrl) {
         $.ajax({
            url: URL,
            type: "Get",
            dataType: "json",
            success: function (data) {
                $(TblContainer).empty();
                $.each(data, function (i, address) {
                    drawAddress(address, DeleteUrl, TblContainer)
                })

            }
        });
    }

    var addAddress = function (FrmID,URL,TbContainer,DeleteUrl,btnID) {

        // first disable button
        debugger;
        if (!$(FrmID).valid()) {
            return false;
        }


        disableBtn(btnID)

        var frmData = $(FrmID).serialize();



         $.ajax({
            url: URL,
            type: "Post",
            data: frmData,
            dataType: "json",
            success: function (data) {

                enableBtn(btnID, "Add");

                if (data.Result.IsSuccess) {
                    successDialog(data.Result.Message);
                    drawAddress(data, DeleteUrl, TbContainer)
                    $(FrmID).trigger("reset");

//                    $("input").val("");
                } else {
                    failedDialog(data.Result.Message);
                }

            }
        });

    }

    var deleteAddress = function (URL,trID) {
        $.ajax({
            url: URL,
            type: "Get",
            dataType: "json",
            success: function (data) {
                if (data.IsSuccess) {
                    successDialog(data.Message)
                    $('#' + trID).remove();
                }
            }
        });
    }



    var updateResponTexts = function (btnID) {

          disableBtn(btnID);

          var formData = $("#frmRespon").serialize();

        $.ajax({
            url: "@Url.Action("CreateUpdateResponsibility", "HomePage")",
            type: "Post",
            data: formData,
            dataType: "json",
            success: function (data) {

                enableBtn(btnID, "Update");

                successDialog(data.Result.Message);
            }
        });

    }

      var updateInfoTexts = function (btnID) {

          disableBtn(btnID);

          var formData = $("#frmInfo").serialize();

          $.ajax({
              url: "@Url.Action("CreateUpdateInfo", "HomePage")",
              type: "Post",
              data: formData,
              dataType: "json",
              success: function (data) {

                  enableBtn(btnID, "Update");

                  successDialog(data.Result.Message);
              }
          });

      }


      function enableBtn(btnId,message) {
          $(btnId).html(message);
          $(btnId).prop('disabled', false);
      }

      function disableBtn(btnId) {
          $(btnId).html("Please wait...");
          $(btnId).prop('disabled', true);
      }


</script>

 


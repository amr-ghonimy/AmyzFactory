<script>
    // Images


    var idCounter = 0;

    $(document).ready(function () {

        var sliders = "@Url.Action("GetSliders", "HomePage")";
        var delSliders = "@Url.Action("DeleteSlider", "HomePage")";
        getImages(sliders, "TblSlidersBody", delSliders);


        var info = "@Url.Action("GetInfoImage", "HomePage")";

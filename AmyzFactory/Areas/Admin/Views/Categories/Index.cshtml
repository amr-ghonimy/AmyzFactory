
@model  AmyzFactory.Models.CategoryViewModel


@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
 }

  <!-- Begin Page Content -->

<!-- Modal -->
